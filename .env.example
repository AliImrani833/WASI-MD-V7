# ═══════════════════════════════════════════════════════════════════
#  WASI-MD-V7 Configuration
#  Copy this file to .env and fill in your values
# ═══════════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────
#  REQUIRED SETTINGS
# ─────────────────────────────────────────────────────────────────

# MongoDB Connection String (Get from MongoDB Atlas or Railway)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Unique Session ID (Choose any name)
SESSION_ID=my_bot_session

# Your WhatsApp Number (with country code, no + or spaces)
OWNER_NUMBER=263788049675

# ─────────────────────────────────────────────────────────────────
#  OPTIONAL SETTINGS
# ─────────────────────────────────────────────────────────────────

# Bot Configuration
BOT_NAME=WASI BOT
OWNER_NAME=MR WASI
PREFIX=.
MODE=public

# Auto Features
AUTO_READ=false
AUTO_TYPING=false
AUTO_RECORDING=false
ALWAYS_ONLINE=true
AUTO_STATUS_SEEN=true
AUTO_STATUS_REACT=true

# Time Zone
TIME_ZONE=Asia/Karachi

# Menu Style
MENU_STYLE=classic
FONT_STYLE=original
